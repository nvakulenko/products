<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="sangre.project.product">

	<class name="Employee" table="employees" discriminator-value="C">

		<id name="id" column="employee_id">
			<generator class="native" />
		</id>

		<discriminator column="subclass" type="character" />
		
		<property name="name" />
		<property name="title" />
		<property name="address" />
		<property name="birthDate" type="date" not-null="true" update="false" />
		<property name="hireDate" type="date" not-null="true" update="false" />
		<property name="homePhone" />
		<property name="notes" />
	</class>

</hibernate-mapping>